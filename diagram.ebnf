/**
 * Snappy Diagrams grammar in EBNF
 *
 * box A:"Box 1" @ 1,3
 * ellipse B:"Box 2"
 * C:"Box 3"
 * A -> B
 * A - C
 * C -> A
 *
 */

diagram ::= statement*

statement ::= (boxDeclaration | (identifier connector identifier))+

boxDeclaration ::= identifier ':' string

connector ::= '-' '>'?

string ::= '"' [^"]* '"' | "'" [^']* "'"

identifier ::= [a-zA-Z_][a-zA-Z0-9_]*
